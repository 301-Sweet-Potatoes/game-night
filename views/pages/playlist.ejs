<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Playlist</title>
</head>

<body>
  <h1>Find a Playlist</h1>

  <form action="/playlist" method="POST">
    <input type="text" name="search" placeholder="Add a search phrase">
    <button type="submit">Search</button>
  </form>


  <% if (typeof(playlists) !== 'undefined') { %>
  <% playlists.forEach(playlist => { %>
  <section>
    <h1><%= playlist.name %></h1>
    <img src="<%= playlist.image %>" height="380px"></img>
    <iframe src="https://open.spotify.com/embed/playlist/<%= playlist.spotifyId %>" width="300" height="380"
      frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
    <button>Save</button>
  </section>
  <% }) %>
  <% } %>

</body>
</html>