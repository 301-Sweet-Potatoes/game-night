<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layout/head') %>
  <title>Trivia</title>
</head>

<body>

  <header>
    <%- include('../layout/header') %>
  </header>

<div id="triviaHeader">
  <h1>TRIVIA</h1>
</div>

<div class="container">
  <form class="flex-form" action="/trivia" method="POST">
    <label for="category">Category</label>
    <select id="category" name="category">
      <option value='random'>Random</option>
      <option value='computers'>Computers</option>
      <option value='video-games'>Video Games</option>
    </select>
    <label for="level">Difficulty</label>
    <select id="level" name="level">
      <option value='easy'>Easy</option>
      <option value='medium'>Medium</option>
      <option value='hard'>Hard</option>
    </select>
    <button type="submit" class="buttonRight">Search</button>
  </form>

  <% if (typeof(triviaQuestions) !== 'undefined') { %>
  <% triviaQuestions.forEach(pumpkin => { %>
  <form id="addtosavedTrivia" action="/triviafavs" method="POST">
    <fieldset>
      <h2><%-pumpkin.question%></h2>
      <h3><%-pumpkin.correctanswer%></h3>
      <input type="hidden" name="question" value="<%- pumpkin.question %>">
      <input type="hidden" name="answer" value="<%- pumpkin.correctanswer %>">
      <input type="hidden" name="category" value="<%- pumpkin.category %>">
      <button type="submit">Save Trivia</button>
    </fieldset>
  </form>
  <% }) %>
  <% } %>
</div>
</body>

</html>