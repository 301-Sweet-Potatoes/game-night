<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../layout/head') %>
  <title>Favorites</title>
</head>

<body>
  <header>
    <h1><a href="/">Favorites</a></h1>
  </header>
  <a href='/index.ejs'>Home</a>
  <main>
    <section class="fav-boxes">
      <div id="fav-a">
        <h1>FAVORITES</h1>>
      </div>

      <div id="decoration1"><img src="../img/curlyclock.png"></div>


      <div id="fav-b">Trivia
        <% trivia.forEach(triviaquestions=> {%>
        <%- include('../partials/savedtrivia', {triviaquestions})%>

        <% }) %>


      </div>




      <div id="fav-c">Games

        <% boardgames.forEach(game => { %>
        <%- include('../partials/favgames', { game }) %>
        <% }) %>
        <div id="gameaddbutton"><img src="../img/addbutton.png" height="50" width="100"></div>
        <div id="gamedelbutton"><img src="../img/deletebutton.png" height="50" width="100"></div>
      </div>

      <!-- Playlist Div -->
      <div id="fav-d">
        <%- include('../partials/playlist', { playlist }) %>
        <img src="../img/addbutton.png" height="50" width="100" id="playaddbutton">
        <img src="../img/deletebutton.png" height="50" width="100" id="playdelbutton">
      </div>

    </section>




    <!-- trivia div -->
    <div id="fav-e">Trivia

      <% trivia.forEach(triviaquestions => { %>
      <%- include('../partials/savedtrivia', { triviaquestions }) %>
      <% }) %>
      <div id="triviaaddbutton"><img src="../img/addbutton.png" height="50" width="100"></div>
      <div id="triviadeletebutton"><img src="../img/deletebutton.png" height="50" width="100"></div>
    </div>
  </main>
  <footer>
    <div id="footer"></div>
  </footer>
</body>

</html>