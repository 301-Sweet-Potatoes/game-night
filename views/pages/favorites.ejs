      <div id="trivdelbutton"><img src="../img/deletebutton.png" height="50" width="100"></div> 
 
 
      </div>


   
    
    <div id = "fav-c">Games 

      <% boardgames.forEach(game => { %>
          <%- include('../partials/favgames', { game }) %>
      <% }) %>
          <div id="gameaddbutton"><img src="../img/addbutton.png" height="50" width="100"></div> 
          <div id="gamedelbutton"><img src="../img/deletebutton.png" height="50" width="100"></div>
    </div>

    <!-- Playlist Div -->
    <div id = "fav-d">
      <%- include('../partials/playlist', { playlist }) %>
      <img src="../img/addbutton.png" height="50" width="100" id= "playaddbutton">
      <img src="../img/deletebutton.png" height="50" width="100" id= "playdelbutton">      
    </div>     
    
  </section> 
   
    </main>
    <footer>
      <div id ="footer"></div>
    </footer>
