<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Board Games</title>
</head>
<body>
  <h1>Board Games</h1>
  <form action="/gameresults" method="POST">
    <label><span>Order by:<input type = "radio" name="trending">Trending<input type="radio" name="rank">Rank</span></label>

    <label><span><input type="text" name="gamename" placeholder="Title of Game"></span></label>
    <label><span></span></label>
    <button id="boardgames" type="submit">Search Games</button>
  </form>
  <h1>Game Search Results</h1>
  <% if (typeof(gameInfo) !== 'undefined') { %>
  <% gameInfo.forEach(game => { %>
      
      <div id='gameresults'>
           
        <img src="<%= game.image %>">
        <h1><%= game.name %></h1>
        <h3>Min Players: <%= game.min_players %> / Max Players: <%= game.max_players %></h3>
        <p><%= game.description %></p>
      
        <% }) %>
      </div>

</body>
</html>