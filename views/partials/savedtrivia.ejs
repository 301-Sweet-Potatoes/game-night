<section>
  <form id="addtosavedTrivia" action="/favorites/deletetrivia?_method=DELETE" method="post">
    <fieldset>
      <h2><%=triviaquestions.question%></h2>
      <h3><%=triviaquestions.correctanswer%></h3>




      <input type="hidden" name="question" value="<%= triviaquestions.question %>">
      <input type="hidden" name="answer" value="<%= triviaquestions.correctanswer %>">
      <input type="hidden" name="category" value="<%= triviaquestions.category %>">
      <button type="radio">Save Trivia</button>
    </fieldset>
    <fieldset>
      <button type="submit">Save and Return to Favorites Page</button>
    </fieldset>
  </form>

</section>